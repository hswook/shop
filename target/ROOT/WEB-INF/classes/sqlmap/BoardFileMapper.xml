<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.re.nnpc.www.modules.board.file.BoardFileMapper">
	<sql id="table_name">board_file</sql>

	<select id="getListByPostId" resultType="BoardFile">
		SELECT
			*
		FROM <include refid="table_name"/>
		WHERE post_id = #{post_id}
	</select>
	
	<select id="getById" parameterType="long" resultType="BoardFile">
		SELECT *
		FROM <include refid="table_name"/>
		WHERE id = #{id}
	</select>
	
	<insert id="insert" parameterType="BoardFile">
		INSERT INTO <include refid="table_name"/>
		(id, post_id, original_name, file_path)
		VALUES
		(seq_board_file.NEXTVAL, #{post_id}, #{original_name}, #{file_path})
	</insert>
	
	<update id="updateDownloadCount" parameterType="long">
		UPDATE <include refid="table_name"/>
		SET download_count = download_count + 1
		WHERE id = #{id}
	</update>
	
	<delete id="deleteById" parameterType="long">
		DELETE FROM <include refid="table_name"/>
		WHERE id = #{id}
	</delete>
	
	<delete id="deleteByPostId" parameterType="long">
		DELETE FROM <include refid="table_name"/>
		WHERE post_id = #{post_id}
	</delete>
	
</mapper>